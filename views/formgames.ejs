<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Game</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="sidebar">
        <h2>Inventory App</h2>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/newgame">Add a New Game</a></li>
          <li><a href="/newdev">Add a New Developer</a></li>
          <li><a href="/newgenre">Add a New Genre</a></li>
          <li><a href="/dev">See All Developers</a></li>
          <li><a href="/genre">See All Genres</a></li>
        </ul>
      </div>
      <div class="main-content">
        <h1>Add a New Game</h1>
        <form method="POST" action="/newgame" class="form">
          <label for="title">Title:</label>
          <input type="text" name="title" id="title" required class="input" />

          <label for="release_date">Release Date:</label>
          <input
            type="date"
            name="release_date"
            id="release_date"
            required
            class="input"
          />

          <label for="genre">Genre:</label>
          <select name="genre_id" id="genre" required class="input">
            <% genres.forEach(genre => { %>
            <option value="<%= genre.id %>"><%= genre.name %></option>
            <% }) %>
          </select>

          <label for="dev">Developer:</label>
          <select name="dev_id" id="dev" required class="input">
            <% devs.forEach(dev => { %>
            <option value="<%= dev.id %>"><%= dev.name %></option>
            <% }) %>
          </select>

          <label for="price">Price:</label>
          <input
            type="number"
            name="price"
            id="price"
            step="0.01"
            required
            class="input"
          />

          <input type="submit" value="Submit" class="submit-button" />
        </form>
      </div>
    </div>
  </body>
</html>
